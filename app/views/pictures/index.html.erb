<h1>All Pictures</h1>

<p><%= link_to("Create a New Picture", new_picture_url) %></p>

<% @all_pictures.each do |pic| %>
  <%= image_tag(pic.source, :width => 200) %></a>
  <p><%= pic.caption %></p>
  <p><%= link_to "Show", picture_url(pic.id) %></p>
  <p><%= link_to "Edit", edit_picture_url(pic.id) %></p>
  <p><%= link_to "Destroy", picture_url(pic.id), :method => 'delete' %></p>
<% end %>
