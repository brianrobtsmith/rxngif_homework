<h1>All Pictures</h1>

<p><%= link_to("Create a New Picture", "http://localhost:3000/new_picture_form") %></p>

<% @all_pictures.each do |pic| %>
 <a href="http://localhost:3000/picture_details/<%= pic.id %>">
  <%= image_tag(pic.source, :width => 200) %></a>
  <p><%= pic.caption %></p>
  <p><%= link_to("Show", "http://localhost:3000/picture_details/#{pic.id}") %></p>
  <p><%= link_to("Edit", "http://localhost:3000/edit_picture_form/#{pic.id}") %></p>
  <p><%= link_to("Destroy", "http://localhost:3000/delete_picture/#{pic.id}") %></p>
<% end %>
